{
  "name":"iperf-test-scaling-thr",
  "vendor":"IITH",
  "version":"1.0",
  "vld":[
    {
      "name":"private"
    }
  ],
  "vnfd":[
    {
      "name":"simple-server",
      "vendor":"IITH",
      "version":"1.0",
      "lifecycle_event":[
        {
          "event":"INSTANTIATE",
          "lifecycle_events":[
            "configure_host.sh",
            "install.sh",
            "install-srv.sh"
          ]
        },
	{
          "event":"START",
          "lifecycle_events":[
             "snmp_configure.sh"
          ]
        }
      ],
      "virtual_link":[
        {
          "name":"private"
        }
      ],
      "vdu":[
        {
          "vm_image":[
            "ubuntu"
          ],
          "scale_in_out":1,
          "vnfc":[
            {
              "connection_point":[
                {
                  "virtual_link_reference":"private",
                  "interfaceId":0
                }
              ]
            }
          ],
          "vimInstanceName":["temp"],
	  "auto_scale_policy":[
           {
		"name":"scale-out",
		"threshold":100,
		"period":30,
		"cooldown":90,
		"comparisonOperator":">=",
		"mode":"REACTIVE",
		"type":"WEIGHTED",
		"alarms":[
		{
		 "metric":"net.if.in[ens3]",
		 "statistic":"max",
                 "comparisonOperator":">",
		 "threshold":800,
		 "weight":1
		}
		],
	       "actions":[
		{
			"type":"SCALE_OUT",
			"value":"1"
		}
		]
	}
	]
        }
      ],
      "deployment_flavour":[
        {
          "flavour_key":"m1.small"
        }
      ],
      "type":"server",
      "endpoint":"generic",
      "vnfPackageLocation":"https://github.com/tulja/vnf-scripts-1.git"
    }
  ]
}
